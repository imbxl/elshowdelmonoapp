<?xml version='1.0' encoding='utf-8'?>
<widget id="ar.com.elshowdelmono.intranet" version="1.0.18" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<preference name='phonegap-version' value='cli-8.0.0' />	
	<preference name='pgb-builder-version' value='2' />
    <name>El Show del Mono</name>
    <description>
        Intranet El Show del Mono
    </description>
    <author email="info@dia8publicidad.com.ar" href="dia8publicidad.com.ar">
		Dia8Publicidad
    </author>
    <content src="index.html" />
    <access origin="*" />
	<allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="21" />
		<preference name="android-build-tool" value="gradle" />
		<resource-file src="google-services.json" target="app/google-services.json" />
        <allow-intent href="market:*" />
		<plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
		<icon src="icon.png" />
		<splash src="splash.png" />
		<plugin name="phonegap-plugin-push" spec="2.1.3">
			<variable name="FCM_VERSION" value="11.6.2" />
			<variable name="SENDER_ID" value="1089320506180" />
		</plugin>
    </platform>
    <platform name="ios">		
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
		<resource-file src="GoogleService-Info.plist" />
		<plugin name="phonegap-plugin-push">
			<variable name="SENDER_ID" value="1089320506180" />
		</plugin>
    </platform>
    <preference name="DisallowOverscroll" value="true" />
	<plugin name="cordova-plugin-dialogs" />
	<plugin name="cordova-plugin-console" />
	<plugin name="cordova-plugin-statusbar" />
</widget>